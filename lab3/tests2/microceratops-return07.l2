// Find the value of d < 1000 for which 1/d contains the longest recurring cycle. 
// Project Euler 26

int main ()
{
	int i;
	int j;
	int len;
	int maxlen;	
	int c;
	int rc;

	maxlen = 0;

	for ( i = 1; i <= 1000; i++) {
		c = 1;

		for ( j = 0; j < i; j++) {
			c = (c*10) % i;
		}

		rc = c;
		len = 0;

		c = (c * 10) % i;
		len++;
		while ( c != rc ) {
			c = (c*10) % i;
			len++;
		}
		
		if ( len > maxlen ) { 
			maxlen = len;
		}
	}

	return maxlen;
} 
